<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net45</TargetFramework>
    <Version>0.0.1-alpha</Version>
    <Authors>Pavel Dorovskii</Authors>
    <PackageProjectUrl>https://github.com/memores/Memores.Metrics</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/memores/Memores.Metrics/blob/master/LICENSE</PackageLicenseUrl>
    <Description>Metrics for WCF services with ElasticSearch reporting</Description>
    <SignAssembly>false</SignAssembly>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>    
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NEST" Version="5.6.0" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Configuration" />
    <Reference Include="System.ServiceModel" />
  </ItemGroup>

</Project>
